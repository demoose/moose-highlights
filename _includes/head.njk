<!DOCTYPE html>
<html lang="en">
<head>
  <title>{% if title %}{{ title | escape }} | {% endif %} {{ site.title }}</title>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width" />
  <meta name="generator" content="Eleventy v3.0.0">
  {% if book %}
    <meta name="description" content="Notes and tweaks from {{ title }} by {{ author }}">
  {% else %}
    <meta name="description" content="{{ site.description }}">
  {% endif %}

  <meta name="robots" content="index, follow">


  <link rel="icon" href="{{ '/assets/images/favicon.svg' | url }}" type="image/svg+xml">
  <link rel="alternate icon" href="{{ '/assets/images/favicon-16.png' | url }}" sizes="16x16" type="image/png">
  <link rel="alternate icon" href="{{ '/assets/images/favicon-32.png' | url }}" sizes="32x32" type="image/png">
  <link rel="alternate icon" href="{{ '/assets/images/favicon-48.png' | url }}" sizes="48x48" type="image/png">
  <link rel="alternate icon" href="{{ '/assets/images/favicon-62.png' | url }}" sizes="62x62" type="image/png">
  <link rel="alternate icon" href="{{ '/assets/images/favicon-192.png' | url }}" sizes="192x192" type="image/png">

  <meta name="twitter:card" content="summary">
  <meta name="twitter:site" content="{{ site.twitter }}">
  <meta name="twitter:title" content="{% if title %}{{ title | escape }} | {% endif %} {{ site.url | url }}">
  {% if book %}
    <meta name="twitter:description" content="Notes and tweaks from {{ title }} by {{ author }}">
  {% else %}
    <meta name="twitter:description" content="{{ site.description }}">
  {% endif %}

  <meta name="og:url" content="{{ site.url }}{{ url }}">
  <meta name="og:title" content="{% if title %}{{ title | escape }} | {% endif %} {{ site.url | url }}">
  
  {% if book %}
    <meta name="og:description" content="Notes and tweaks from {{ title }} by {{ author }}">
  {% else %}
    <meta name="og:description" content="{{ site.description }}">
  {% endif %}

  {% if book %}
    {% set book_cover = png %}
    <meta name="twitter:image:src" content="{{site.url}}{{ book_cover}}{{ url }}">
    <meta name="twitter:image:alt" content="Cover of {{ title }}">
    <meta name="og:image" content="{{site.url}}{{ book_cover}}{{ url }}">
  {% else %}
    <meta name="twitter:image:src" content="{{ '/assets/images/share-icon.png' | url }}">
    <meta name="og:image" content="{{ '/assets/images/share-icon.png' | url }}">
  {% endif %}

  
  <link rel='preload' href="https://fonts.googleapis.com/css?family=Karla|Sorts+Mill+Goudy&display=swap" as='style' onload="this.onload=null;this.rel='stylesheet'">
  <noscript><link href="https://fonts.googleapis.com/css?family=Karla|Sorts+Mill+Goudy&display=swap" rel="stylesheet"></noscript>
  <link rel="stylesheet" href="{{ '/assets/css/style.css?v2021.06.17' | url }}">
</head>